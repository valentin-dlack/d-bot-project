{% extends 'layout.twig' %}

{% block body %}
{% if e_message %}
    <div class="mx-auto max-w-sm bg-red-100 border border-red-500 text-red-800 px-4 py-3 rounded relative my-5"
        role="alert">
        <span class="block sm:inline">{{ e_message }}</span>
    </div>
{% endif %}
<form name="" method="post">
  <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2 mt-10">
    <div class="bg-white px-6 py-8 rounded-lg shadow-md text-black w-full">
      <h1 class="mb-8 text-3xl text-center">Register</h1>
      <!-- FORM -->
      <div><input type="email" id="mail" name="mail" required="required"
          class="border border-grey-light w-full px-2 py-3 rounded shadow-sm mb-4" placeholder="Email" /></div>
      <div><input type="text" id="username" name="username" required="required"
          class="border border-grey-light w-full px-2 py-3 rounded shadow-sm mb-4" placeholder="Username" /></div>
      <div><input type="password" id="password" name="password" required="required"
          class="border border-grey-light w-full px-2 py-3 rounded shadow-sm mb-4"
          placeholder="Password confirmation" /></div>
      <div><input type="password" id="password" name="confirm_password" required="required"
          class="border border-grey-light w-full px-2 py-3 rounded shadow-sm mb-4"
          placeholder="Password confirmation" /></div>
      <div><label for="AgreeTerms" class="required">I Agree to the Terms of Use </label><input type="checkbox"
          id="AgreeTerms" name="agree" required="required" class="checked:bg-green-500" value="1" /></div>
      <button type="submit"
        class="text-white mt-5 w-full px-4 py-2 bg-blue-400 hover:bg-blue-300 rounded-md">Register</button>
</form>

<a class="mx-auto" href="login">
  <p class="text-center text-sm underline text-gray-600 mt-5">J'ai déjà un compte</p>
</a>
<a class="max-w-sm mx-auto" href="https://www.youtube.com/watch?v=0mYBSayCsH0">
  <p class="text-center text-sm underline text-gray-600 mb-4 mt-1">Terms and conditions of use.</p>
</a>

{% endblock %}